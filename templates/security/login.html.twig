{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <header class="bg-header h-32 text-white flex items-center fixed top-0 w-full z-50">
        <div class="w-1/4">
            <img class="w-36" src="{{ asset('build/img/logo.png') }}" alt="logo">
        </div>
        <h1 class="text-3xl font-bold text-center flex-1">ANGELIKA LIBRARY</h1>
        <div class="w-1/4 text-right">
            <a class="text-link mr-4" href="{{ path('app_home') }}">Accueil</a>
            <a class="text-link mr-4" href="{{ path('app_register') }}">Inscription</a>
        </div>
    </header>

    <main class="mt-32">
        <h1 class="text-h1Home text-h1 font-popp text-center mb-8">Connexion</h1>
        <div class="flex flex-col sm:flex-row items-center mx-auto">
            <div class="w-1/2 mb-4 mx-auto">
                <img src="{{ asset('build/img/login.png') }}" alt="library" class="mb-4 mx-auto">
            </div>
            <div class="w-1/3 my-36 mx-auto">
                <form method="post" class="bg-form-gradient p-4">
                    {% if error %}
                        <div class="mb-4 text-red-500">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-4">
                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <div class="mb-4">
                        <label for="inputEmail" class="block text-black font-popp">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-input bg-input border-none rounded-sm" autocomplete="email" required autofocus>
                    </div>
                    <div class="mb-4">
                        <label for="inputPassword" class="block text-black font-popp">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-input bg-input border-none rounded-sm" autocomplete="current-password" required>
                    </div>
                    <div class="mb-4">
                        <label class="flex items-center">
                            <input type="checkbox" name="_remember_me" class="mr-2">
                            <span class="text-black font-popp">Remember me</span>
                        </label>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="text-center">
                        <button type="submit" class="btn bg-button text-black shadow shadow-black border border-black transform -skew-x-12">
                            <span class="px-4 py-2">Connexion</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>
    {% endblock %}
