{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('carousel') }}
{% endblock %}
{% block title %}Accueil{% endblock %}

{% block body %}
    <header class="bg-header h-32 text-white flex items-center fixed top-0 w-full z-50">
        <div class="w-1/4">
            <img class="w-36" src="{{ asset('build/img/logo.png') }}" alt="logo">
        </div>
        <h1 class="text-3xl font-bold text-center flex-1">ANGELIKA LIBRARY</h1>
        {% if app.user is null %}
            <div class="w-1/4 text-right">
                <a class="text-link mr-4" href="{{ path('app_register') }}">Inscription</a>
                <a class="text-link mr-4" href="{{ path('app_login') }}">Connexion</a>
            </div>
        {% else %}
            <div class="w-1/3 text-right">
                <a class="text-link mr-4" href="{{ path('app_home') }}">Accueil</a>
                <a class="text-link mr-4" href="{{ path('add_item') }}">Ajouter article</a>
                <a class="text-link mr-4" href="{{ path('add_library') }}">Ajouter Library</a>
                <a class="text-link mr-4" href="{{ path('app_library') }}">Library</a>
                <a class="text-link mr-4" href="{{ path('app_category_index') }}">Catégories</a>
                <a class="text-link mr-4" href="{{ path('app_logout') }}">Déconnexion</a>
                <div>
                    <form class="flex items-center">
                        <label for="searchOption" class="text-sm mr-2">Rechercher:</label>
                        <select name="searchOption" id="searchOption" onchange="window.location.href=this.value" class="border border-gray-300 rounded py-1 px-2">
                            <option value="" disabled selected>Sélectionnez une option</option>
                            <option class="bg-button" value="{{ path('app_items_search') }}">Recherche par mots-clés</option>
                            <option class="bg-button" value="{{ path('app_items_search_editor') }}">Recherche par éditeur</option>
                        </select>
                    </form>
                </div>
            </div>
        {% endif %}


    </header>
    <main class="mt-32">
        <div class="text-center">
            <h1 class=" mt-36 text-h1Home text-h1 font-popp">Votre ludothèque online</h1>
            <p class="my-4 text-textp text-pColor font-popp">Retrouvez toute votre bibliothèque au même endroit</p>
            <p class="my-4 text-textp text-pColor font-popp">Livres, Jeux de société, Jeux Vidéos, Mangas</p>
        </div>

        <div id="container-carousel" class="flex flex-wrap justify-around items-center">
            <div class="w-1/3 mt-12">
                <div class=" ml-32 overflow-hidden swiper-container mySwiper">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <img src="{{ asset('build/img/book1.png') }}" alt="book"/>
                        </div>
                        <div class="swiper-slide">
                            <img src="{{ asset('build/img/book2.png') }}" alt="book"/>
                        </div>
                        <div class="swiper-slide">
                            <img src="{{ asset('build/img/book3.png') }}" alt="book"/>
                        </div>
                        <div class="swiper-slide">
                            <img src="{{ asset('build/img/book4.png') }}" alt="book"/>
                        </div>
                    </div>
                    <div class="mt-4">
                        <div class="overflow-hidden swiper-container mySwiper ">
                            <div class="swiper-wrapper">
                                <div class="swiper-slide">
                                    <img src="{{ asset('build/img/board-game1.png') }}" alt="board-game"/>
                                </div>
                                <div class="swiper-slide">
                                    <img src="{{ asset('build/img/board-game2.png') }}" alt="board-game"/>
                                </div>
                                <div class="swiper-slide">
                                    <img src="{{ asset('build/img/board-game3.png') }}" alt="board-game"/>
                                </div>
                                <div class="swiper-slide">
                                    <img src="{{ asset('build/img/board-game4.png') }}" alt="board-game"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <img src="{{ asset('build/img/img_home.png') }}" alt="library">
            </div>
            <div class="w-1/3 mt-12">
                <div class=" ml-44 overflow-hidden swiper-container mySwiper">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <img src="{{ asset('build/img/manga1.png') }}" alt="manga"/>
                        </div>
                        <div class="swiper-slide">
                            <img src="{{ asset('build/img/manga2.png') }}" alt="manga"/>
                        </div>
                        <div class="swiper-slide">
                            <img src="{{ asset('build/img/manga3.png') }}" alt="manga"/>
                        </div>
                        <div class="swiper-slide">
                            <img src="{{ asset('build/img/manga4.png') }}" alt="manga"/>
                        </div>
                    </div>
                    <div class="mt-4">
                        <div class=" overflow-hidden swiper-container mySwiper">
                            <div class="swiper-wrapper">
                                <div class="swiper-slide">
                                    <img src="{{ asset('build/img/games1.png') }}" alt="games"/>
                                </div>
                                <div class="swiper-slide">
                                    <img src="{{ asset('build/img/games2.png') }}" alt="games"/>
                                </div>
                                <div class="swiper-slide">
                                    <img src="{{ asset('build/img/games3.png') }}" alt="games"/>
                                </div>
                                <div class="swiper-slide">
                                    <img src="{{ asset('build/img/games4.png') }}" alt="games"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>


{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('carousel') }}
{% endblock %}
