{% extends 'base.html.twig' %}

{% block title %}Library{% endblock %}

{% block body %}
<header class="bg-header h-32 text-white flex items-center fixed top-0 w-full z-50">
    <div class="w-1/4">
        <img class="w-36" src="{{ asset('build/img/logo.png') }}" alt="logo">
    </div>
    <h1 class="text-3xl font-bold text-center flex-1">ANGELIKA LIBRARY</h1>
    <div class="w-1/2 text-right">
        <a class="text-link mr-4" href="{{ path('app_home') }}">Accueil</a>
        <a class="text-link mr-4" href="{{ path('add_item') }}">Ajouter article</a>
        <a class="text-link mr-4" href="{{ path('add_library') }}">Ajouter une librairie</a>
        <a class="text-link mr-4" href="{{ path('app_category_new') }}">Ajouter une Categorie</a>
        <a class="text-link mr-4" href="{{ path('app_category_index') }}">Catégories</a>
    </div>
</header>
<section class="mt-32 flex flex-wrap px-4">
    <h1 class="w-full text-h1Home text-h1 font-popp text-center mb-8">Bibliothèque</h1>

    {% for library in libraries %}
        <div class="bg-form-gradient mx-auto w-1/4 p-4 mb-4 ml-4">
            <h2 class="text-h1 text-center mb-4">{{ library.name }}</h2>
            <p>Catégories: {{ library.category }}</p>
            <h3 class="font-bold text-center text-xl">Item</h3>
            {% for item in library.getItemsCollections %}
                <div class="mb-4">
                    <h2>{{ item.category }}</h2>
                    <h2>Titre: {{ item.title }}</h2>
                    <p>Auteur: {{ item.author }}</p>
                    <p>Editeur: {{ item.editor }}</p>
                    <p>Nombre de joueurs: {{ item.numberPlayer }}</p>
                    <p> Temps de jeu: {{ item.playingTime }} min</p>
                    <p>Langue: {{ item.language }}</p>
                    <p>Bibliothèque: {{ item.library }}</p>
                    <a class="btn my-2 mr-2 px-4 bg-button text-black shadow shadow-black border border-black transform skewX(-12deg)" href="{{ path('edit_item', {'id': item.id}) }}">DONT TOUCH !!!!Éditer l'item</a>
                    {{ include('item/_delete_form.html.twig') }}
                </div>
            {% endfor %}
            <div class="text-center mt-4">
                <a class="btn my-2 mr-2 px-4 bg-button text-black shadow shadow-black border border-black transform skewX(-12deg)" href="{{ path('edit_library', {'id': library.id}) }}">Éditer la bibliothèque</a>
                {{ include('library/_delete_form.html.twig') }}
            </div>
        </div>
    {% endfor %}
</section>
{% endblock %}
