{% extends 'base.html.twig' %}

{% block title %}Library{% endblock %}

{% block body %}
    <header class="bg-header h-32 text-white flex items-center fixed top-0 w-full z-50">
        <div class="w-1/4">
            <img class="w-36" src="{{ asset('build/img/logo.png') }}" alt="logo">
        </div>
        <h1 class="text-3xl font-bold text-center flex-1">ANGELIKA LIBRARY</h1>
        <div class="w-1/4 text-right">
            <a class="text-link mr-4" href="{{ path('app_home') }}">Accueil</a>
            <a class="text-link mr-4" href="{{ path('app_login') }}">Ajouter article</a>
            <a class="text-link mr-4" href="{{ path('add_library') }}">Ajouter une librairie</a>
        </div>
    </header>

    <main class="mt-32">
        <h1 class="text-h1Home text-h1 font-popp text-center mb-8">Ma Library</h1>
        {% for library in libraries %}
            <h2>{{ library.name }}</h2>
            <p>{{ library.category }}</p>
            <h3>Items:</h3>
                {% for item in library.getItemsCollections %}
                    <h2>{{ item.title }}</h2>
                    <p>{{ item.author }}</p>
                    <p>{{ item.editor }}</p>
                    <p>{{ item.numberPlayer }}</p>
                    <p>{{ item.playingTime }}</p>
                    <p>{{ item.language }}</p>
                    <p>{{ item.category }}</p>
                    <p>{{ item.library }}</p>
                {% endfor %}

        {% endfor %}
    </main>

{% endblock %}
