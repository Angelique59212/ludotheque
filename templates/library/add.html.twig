{% extends 'base.html.twig' %}

{% block title %}Ajouter une Librairie{% endblock %}

{% block body %}
    <header class="bg-header h-32 text-white flex items-center fixed top-0 w-full z-50">
        <div class="w-1/4">
            <img class="w-36" src="{{ asset('build/img/logo.png') }}" alt="logo">
        </div>
        <h1 class="text-3xl font-bold text-center flex-1">ANGELIKA LIBRARY</h1>
        <div class="w-1/4 text-right">
            <a class="text-link mr-4" href="{{ path('app_home') }}">Accueil</a>
            <a class="text-link mr-4" href="{{ path('add_item') }}">Ajouter article</a>
            <a class="text-link mr-4" href="{{ path('app_library') }}">Library</a>
        </div>
    </header>

    <main class="mt-32">
        <h1 class="text-h1Home text-h1 font-popp text-center mb-8">Ajouter une library</h1>
        <div class="my-32">
            <div class="w-1/3 mx-auto">
                <div class="pl-4">
                    {{ form_errors(form_add_library) }}
                    {{ form_start(form_add_library) }}
                    <div class="bg-form-gradient p-4">
                        <div class="font-popp">
                            <div class="mb-4 flex flex-row items-center">
                                {{ form_label(form_add_library.name, 'Nom', {
                                    'label_attr': {
                                        'class': 'w-1/2'
                                    }})
                                }}
                                {{ form_widget(form_add_library.name, {
                                    'attr': {
                                        'class': 'w-1/2 bg-input border-none rounded-sm'
                                    }})
                                }}
                            </div>

                            <div class="mb-4 flex flex-row items-center">
                                {{ form_label(form_add_library.category, 'Cat√©gorie', {
                                    'label_attr': {
                                        'class': 'w-1/2'
                                    }})
                                }}
                                {{ form_widget(form_add_library.category, {
                                    'attr': {
                                        'class': 'w-1/2 bg-input border-none rounded-sm'
                                    }})
                                }}
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn bg-button text-black shadow shadow-black border border-black transform -skew-x-12">
                                    <span class="px-4 py-2">Ajouter</span>
                                </button>
                            </div>
                            {{ form_end(form_add_library) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

{% endblock %}
