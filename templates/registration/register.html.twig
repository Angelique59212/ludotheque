{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <header class="bg-header h-32 text-white flex items-center fixed top-0 w-full z-50">
        <div class="w-1/4">
            <img class="w-36" src="{{ asset('build/img/logo.png') }}" alt="logo">
        </div>
        <h1 class="text-3xl font-bold text-center flex-1">ANGELIKA LIBRARY</h1>
        <div class="w-1/4 text-right">
            <a class="text-link mr-4" href="{{ path('app_home') }}">Accueil</a>
            <a class="text-link mr-4" href="{{ path('app_login') }}">Connexion</a>
        </div>
    </header>
    <main class="mt-32">
        <h1 class="text-h1Home text-h1 font-popp text-center mb-8">Inscription</h1>
        <div class="flex flex-col sm:flex-row items-center mx-auto">
            <div class="w-1/3 mb-4 mx-auto">
                <img src="{{ asset('build/img/register.png') }}" alt="library" class="w-64 h-auto mb-4 mx-auto">
            </div>
            <div class="w-1/3 ml-4 mx-auto">
                <div class="pl-4">
                    {{ form_errors(registrationForm) }}
                    {{ form_start(registrationForm) }}
                    <div class="bg-form-gradient p-4">
                        <div class="font-popp">
                            <div class="mb-4 flex flex-row items-center">
                                {{ form_label(registrationForm.email, null, {
                                    'label_attr': {
                                        'class': 'w-1/2'
                                    }})
                                }}
                                {{ form_widget(registrationForm.email, {
                                    'attr': {
                                        'class': 'w-1/2'
                                    }})
                                }}
                            </div>

                            <div class="mb-4 flex flex-row items-center">
                                {{ form_label(registrationForm.pseudo, null, {
                                    'label_attr': {
                                        'class': 'w-1/2'
                                    }})
                                }}
                                {{ form_widget(registrationForm.pseudo, {
                                    'attr': {
                                        'class': 'w-1/2'
                                    }})
                                }}
                            </div>

                            <div class="mb-4 flex flex-row items-center">
                                {{ form_label(registrationForm.plainPassword, 'Password', {
                                    'label_attr': {
                                        'class': 'w-1/2'
                                    }})
                                }}
                                {{ form_widget(registrationForm.plainPassword, {
                                    'attr': {
                                        'class': 'w-1/2'
                                    }})
                                }}
                            </div>

                            <div class="mb-4 flex flex-row items-center">
                                {{ form_label(registrationForm.agreeTerms) }}
                                {{ form_widget(registrationForm.agreeTerms, {
                                    'attr': {
                                        'class': 'ml-2'
                                    }})
                                }}
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn bg-button text-black shadow shadow-black border border-black transform -skew-x-12">
                                    <span class="px-4 py-2">Register</span>
                                </button>
                            </div>
                            {{ form_end(registrationForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
